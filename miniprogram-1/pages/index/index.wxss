/**index.wxss**/
page {
  /* overflow: hidden; */
}
.task_text {
  height: 60rpx;
  margin: 40rpx auto;
  text-align: center;
}
.task_text .task_title {
  font-size: 37rpx;
  height: 70rpx;
  line-height: 70rpx;
}
.slider {
  width: 650rpx;
  margin: 40rpx auto;
}

.task_cate {
  width: 660rpx;
  height: 90rpx;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
}
.task_cate .cate_item {
  width: 220rpx;
  height: 80rpx;
  text-align: center;
  margin-bottom: 50rpx;
}
.task_cate .cate_item .cate_text {
  height: 55rpx;
  line-height: 60rpx;
  font-size: 35rpx;
}
.task_cate .cate_item .cate_text_active {
  color: #27CFA7;
}
.start {
  width: 280rpx;
  height: 80rpx;
  line-height: 90rpx;
  text-align: center;
  margin: 20rpx auto;
  border: 2rpx solid #27CFA7;
  background-color:#27CFA7;
  color: rgb(241, 247, 245);
  border-radius: 20rpx;
}
.logs {
  width: 280rpx;
  height: 80rpx;
  line-height: 90rpx;
  text-align: center;
  margin: 30rpx auto;
  border: 2rpx solid #27CFA7;
  background-color:#27CFA7;
  color: rgb(241, 247, 245);
  border-radius: 20rpx;
}
.btns .okBtn,.btns .pauseBtn,.btns .continueBtn {
  height: 10rpx;
  line-height: 5rpx;
  text-align: right;
  color: #ffffff;
  margin: 40rpx auto;
  position: fixed;
  right:15rpx;
}
.btns .cancleBtn {
  height: 10rpx; 
  line-height: 5rpx;
  text-align: right;
  color: #ffffff;
  margin: 40rpx auto;
  position: absolute;
  left: 10rpx;
}
.clock {
  overflow: hidden;
  background: #22A585;
}
.progress {
  width: 400rpx;
  height: 400rpx;
  /* background: orange; */
  margin: 140rpx auto;
  position: relative;
}
.progress .progress_bg,.progress .progress_active {
  position: absolute;
  left: 0;
  top: 0;
  width: 400rpx;
  height: 400rpx;
}
.progress .progress_text {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 60rpx;
  color: #ffffff;
  text-align: center;
  position: absolute;
  left: 120rpx;
  top: 170rpx;
}
