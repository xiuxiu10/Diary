.sum{
  display: flex;
  flex-wrap: wrap;
  width: 750rpx;
  height: 230rpx;
  border-bottom:5rpx solid #22A585;
  overflow:hidden; /*隐藏溢出*/
  text-overflow:ellipsis;/*当文本溢出包含元素时显示省略符号来代表被修剪的文本*/
  white-space:nowrap;
}

.sum_item{
  width: 300rpx;
  height: 330rpx;
  text-align: center;
}

.sum_item_title{
  top:220rpx; 
  height: 120rpx;
  line-height: 120rpx;
  font-size: 30rpx;
  color: #6b747e;
  }
.sum_item_val{
  height: 40rpx;
  line-height:40rpx;
  color: #22A585;
}

/* 统计细节样式  */
.active{
  color: #22A585;
}
.detail{
  width: 700rpx;
  margin: 0 auto;
}

.detail_title{
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
}
.detail_text{
  font-size: 30rpx;
  flex:1
}
.detail_type{
  text-align: right;
  font-size: 25rpx;
   
}
.detail_type text{
  padding-left:10rpx;
}

.list_item{
  display: flex;
  justify-content: space-around;
}

.detail_list_bg{
  top: 230rpx;
  left: 0rpx;
  width: 100%;
  height: 80%;
  position: absolute;
  z-index: -1;
}